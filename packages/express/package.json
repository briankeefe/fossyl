{
  "name": "@fossyl/express",
  "version": "0.1.0",
  "description": "Express.js runtime adapter for fossyl - type-safe REST API framework",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "CLAUDE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "fossyl",
    "express",
    "typescript",
    "rest-api",
    "type-safe",
    "adapter"
  ],
  "author": "YoyoSaur",
  "license": "GPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0",
    "@fossyl/core": ">=0.1.0"
  },
  "dependencies": {
    "@types/express": "^4.17.21"
  },
  "devDependencies": {
    "express": "^4.21.0",
    "@fossyl/core": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3"
  }
}
